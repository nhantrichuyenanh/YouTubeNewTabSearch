{
  "manifest_version": 3,
  "name": "YouTube Search New Tab",
  "description": "Opens YouTube search results in a new tab without interrupting the current watching session or toggling miniplayer mode.",
  "author": "Nhân Trí",
  "version": "1.0.7",
  "homepage_url": "https://github.com/nhantrichuyenanh/YouTubeNewTabSearch",
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["main.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {"scripts": ["background.js"]},
  "permissions": ["tabs", "storage"],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "64": "icon.png",
    "128": "icon.png",
    "256": "icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "testing@email.com",
      "strict_min_version": "140.0",
      "data_collection_permissions": {"required": ["none"]}
    }
  }
}