{
  "manifest_version": 3,
  "name": "YouTube Search New Tab",
  "description": "Opens YouTube search results in a new tab so you can search without stopping the current video.",
  "author": "Nhân Trí",
  "version": "1.0.2",
  "homepage_url": "https://github.com/nhantrichuyenanh/YouTubeNewTabSearch",
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["main.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {"scripts": ["background.js"]},
  "permissions": ["tabs"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
  "gecko": {
    "id": "testing@email.com",
    "strict_min_version": "109.0"
    }
  }
}